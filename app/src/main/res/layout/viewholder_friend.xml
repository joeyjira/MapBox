<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/viewholder_friend_list_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="32dp"
    card_view:cardCornerRadius="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1">

        <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:orientation="vertical"
            android:gravity="center"
            android:weightSum="1">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/viewholder_friend_list_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                card_view:civ_border_width="2dp"
                card_view:civ_border_color="@color/colorBorder"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/viewholder_friend_list_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:textAlignment="center"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toBottomOf="@id/viewholder_friend_list_image"
                card_view:layout_constraintBottom_toTopOf="@id/viewholder_friend_list_get_location"/>

            <Button
                android:id="@+id/viewholder_friend_list_get_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/request_location"
                android:textSize="10sp"
                android:layout_margin="8dp"
                card_view:layout_constraintBottom_toTopOf="@id/viewholder_friend_list_send_location"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/viewholder_friend_list_name" />

            <Button
                android:id="@+id/viewholder_friend_list_send_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/send_location"
                android:textSize="10sp"
                android:layout_margin="8dp"
                card_view:layout_constraintTop_toBottomOf="@id/viewholder_friend_list_get_location"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent" />

        </android.support.constraint.ConstraintLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7">

            <TextView
                android:id="@+id/viewholder_friend_list_time_updated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LOCATION LAST UPDATED AT: UNKNOWN" />

            <com.google.android.gms.maps.MapView
                xmlns:map="http://schemas.android.com/apk/res-auto"
                android:id="@+id/viewholder_friend_list_map"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                map:liteMode="true">

            </com.google.android.gms.maps.MapView>
        </FrameLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>