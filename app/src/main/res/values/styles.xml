<resources>

    <!-- Base application theme. -->
    <style
        name="MapBoxTheme"
        parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimaryLight</item>
        <item name="actionMenuTextColor">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="searchViewStyle">@style/MapBoxTheme.SearchView</item>
    </style>

    <style
        name="MapBoxTheme.SearchView"
        parent="Widget.AppCompat.SearchView">
        <item name="background">@color/colorPrimaryDark</item>
        <item name="android:elevation">100dp</item>
        <!--<item name="queryBackground">@drawable/search_view</item>-->
        <!--<item name="submitBackground">@color/colorPrimaryDark</item>-->
        <!--<item name="android:textColorHint">@color/colorPrimary</item>-->
        <!--<item name="android:editTextColor">@color/colorPrimaryDark</item>-->
        <!--<item name="android:layoutDirection">rtl</item>-->
    </style>

    <style name="MapBoxTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <!-- Optional, on Android 5+ you can modify the colorPrimaryDark color to match the windowBackground color for further branding-->
        <!-- <item name="colorPrimaryDark">@android:color/white</item> -->
    </style>
</resources>
